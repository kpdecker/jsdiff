{
    "include": ["src/*.ts", "src/**/*.ts"],
    "compilerOptions": {
        "rootDir": "src/",
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "declaration": true,
        "skipLibCheck": true,
        // TODO: https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html#im-writing-a-library
        //       says that we should enable the two flags below, but they break things
        // "strict": true,
        // "verbatimModuleSyntax": true,
        "declarationMap": true,
    }
}
